# Called every frame. 'delta' is the elapsed time since the previous frame.
func _process(delta):
	
	if Input.is_action_just_pressed(\"ui_down\") && Globals.diff < 2:
		Globals.diff += 1
	if Input.is_action_just_pressed(\"ui_up\") && Globals.diff > 0:
		Globals.diff -= 1
	
	match(Globals.diff):
		0:
			$Cursor.position.x = 189
			$Cursor.position.y = 46
			$DESCRIPTION.text = \"Enemies are few and far between and are not too aggressive\"
		1:
			$Cursor.position.x = 189
			$Cursor.position.y = 99
			$DESCRIPTION.text = \"Enemies are fairly spaced out and put up a decent amount of challenge\"
		2:
			$Cursor.position.x = 189
			$Cursor.position.y = 148
			$DESCRIPTION.text = \"An onslaught of highly aggressive foes!\"
	
	
	if Input.is_action_just_pressed(\"ui_accept\"):
		Sys.load_scene(self,\"res://Stages/StickCity/A-1.tscn\")
	
